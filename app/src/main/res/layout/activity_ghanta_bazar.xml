<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GhantaBazar">

<TableLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/table_ghanta">
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/edt_ghanta_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Enter Digit"
            android:layout_weight="1"
            android:layout_margin="15dp"
            android:padding="8dp"
            android:background="@drawable/bg_light"/>
        <EditText
            android:id="@+id/edt_ghanta_poi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Enter Point"
            android:layout_weight="1"
            android:layout_marginLeft="0dp"
            android:layout_margin="15dp"/>
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ghanta_place_bet"
            android:text="Place Bet"
            android:layout_weight="1"
            android:textSize="16sp"
            android:textStyle="bold"/>

    </TableRow>
</TableLayout>
</RelativeLayout>